<h1><%= @title %></h1>
<%= simple_form_for(:session, :url => sessions_path) do |f| %>
    <small><p class="muted">Login with you email:</p></small>
<%= f.input :email %>
<%= f.input :password %>
<%= f.submit "Sign In", class:'btn btn-info'  %>
  <p> <small><strong>New user? <%= link_to "Register Now" , signup_path %></strong></small>   </p>
<%end%>